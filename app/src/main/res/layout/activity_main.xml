<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.android.tao.xcustomview.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_10"
        android:text="自定义控件测试"
        android:textColor="@color/text_color_two" />

    <com.android.tao.xcustomview.view.XRoundRectImageView
        android:id="@+id/xiv_btn_add"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_27"
        android:src="@mipmap/btn_follow" />

    <com.android.tao.xcustomview.view.XRoundRectButton
        android:id="@+id/btn_one"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_30"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="来点我呀" />

    <com.android.tao.xcustomview.view.XStrokeRoundRectButton
        android:id="@+id/btn_two"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/btn_one"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="来点我呀" />


</RelativeLayout>
